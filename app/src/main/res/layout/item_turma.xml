<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    android:paddingTop="8dp">


    <TextView
        android:id="@+id/tv_id_turma"
        android:layout_height="0dp"
        android:layout_width="0dp"
        />

    <TextView
        android:id="@+id/tv_curso"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="4dp"
        android:layout_width="wrap_content"
        android:text="Graduação em Analise de Sistemas"
        android:textColor="@color/primary_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_id_turma" />

    <TextView
        android:padding="4dp"
        android:id="@+id/tv_nome_turma"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Nome da Materia"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/tv_curso"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:id="@+id/tv_professor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="prof padrão"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/tv_nome_turma"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/vw_divider"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/tv_professor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>