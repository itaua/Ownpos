<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:clickable="false"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Valores Ocultos-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_senac"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_fsico"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_notas"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_assun"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_pdico"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_serie"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_resumo" />
        <!-- /.Valores Ocultos -->


        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="TITULO DO LIVRO"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_chamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:text="CHAMADA DO LIVRO"
            android:layout_below="@+id/tv_titulo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:id="@+id/iv_capa"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_below="@+id/tv_chamada"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lb_autor"
            android:text="@string/lb_autor"
            android:textColor="@color/primary_text"
            android:paddingLeft="4dp"
            android:layout_below="@id/tv_chamada"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ItauÃ¡ Machado"
            android:paddingTop="2dp"
            android:paddingLeft="8dp"
            android:id="@+id/tv_autor"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_below="@+id/lb_autor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_coautor"
            android:id="@+id/lb_coautor"
            android:textColor="@color/primary_text"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:layout_below="@+id/tv_autor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francine D Moro"
            android:textColor="@color/secondary_text"
            android:paddingTop="2dp"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:id="@+id/tv_coautor"
            android:layout_below="@+id/lb_coautor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lb_publicacao"
            android:id="@+id/lb_publicacao"
            android:textColor="@color/primary_text"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:layout_below="@+id/tv_coautor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015"
            android:id="@+id/tv_publicacao"
            android:textColor="@color/secondary_text"
            android:paddingTop="2dp"
            android:paddingLeft="8dp"
            android:textSize="14sp"
            android:layout_below="@+id/lb_publicacao" />

    </RelativeLayout>

</android.support.v7.widget.CardView>